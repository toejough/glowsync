{
  "permissions": {
    "allow": [
      "Bash(mage check:*)",
      "Bash(golangci-lint run:*)",
      "Bash(mage ReorderDecls:*)",
      "Bash(go mod tidy:*)",
      "Bash(go build:*)",
      "Bash(mage lint:*)",
      "Bash(go test:*)",
      "Bash(gofmt:*)",
      "Bash(mage check:lint:*)",
      "Bash(git add:*)",
      "Bash(git restore:*)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
